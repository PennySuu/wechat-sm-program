<!--index.wxml-->
<view class="container">
  <view class="wrap item">
    <navigator url="../index/search/search">
      <view class="search">
        搜索47位亲友
      </view>
    </navigator>
  </view>
  <view class="item section">
    <!-- 明星生日  -->
    <view class="section_star" wx:if="{{isShowStar && stars.length}}">
      <view class="wrap">
        <view class="section_title section_star_title">
          <view class="section_star_star">明星生日 12.05</view>
          <view class="section_star_close" bindtap="handleHideStar">收起</view>
        </view>
      </view>
      <view class="section_star_scroll">
        <scroll-view class="scroll-view_H" scroll-x="true" bindscroll="scroll">
          <view class="scroll-view-item_H" wx:for="{{stars}}" wx:key="id">
            <view class="star">
              <view class="left">
                <view class="info">
                  <view class="name">{{item.name}}</view>
                  <view class="job">{{item.job}}</view>
                </view>
                <button size="mini" plain='true' class="bless">点赞送祝福</button>
              </view>
              <view class="right">
                <image src="{{item.head_picture}}" mode="aspectFill"></image>
              </view>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
    <!--历史上的今天  -->
    <view class="section_history wrap">
      <view class="section_title section_history_title">历史上的今天</view>
      <view class="section_history_picture">
        <image class="picture" src="{{history.cover_url}}" mode="aspectFill"></image>
      </view>
      <view class="section_history_rhesis">
        <view class="date">12/05</view>
        <view class="rhesis">“{{history.description}}”</view>
      </view>
    </view>
    <!--生日列表  -->
    <view class="wrap">
      <view class="section_birth section_birth_soon">
        <view class="section_birth_title">即将过生日</view>
        <view class="section_birth_list">
          <view class="section_birth_item" wx:for="{{birthday}}" wx:key="id">
            <view class="section_birth_head">
              <image src="{{item.avatar}}"></image>
            </view>
            <view class="section_birth_body">
              <view class="section_birth_info">
                <view class="section_birth_name">{{item.name}}</view>
                <view class="section_birth_date">{{item.birth}}</view>
              </view>
              <view class="section_birth_time">
                <view class="section_birth_day">
                  <view>{{item.leftDay}}</view>
                  <view>天</view>
                </view>
                <view class="section_birth_age">距{{item.age > 0 ? item.age + '岁' : '下个'}}生日</view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <navigator class="add" url="../add/add"></navigator>
</view>