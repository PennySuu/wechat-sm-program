        <image class="picture" src="../../images/history.jpg" mode="aspectFill"></image>
      </view>
      <view class="section_history_rhesis">
        <view class="date">12/05</view>
        <view class="rhesis">“人不抱希望是很傻的。”</view>
      </view>
    </view>
