<!--index.wxml-->
<view class="container">
  <view class="wrap item">
    <navigator url="../index/search/search">
      <view class="search">
        搜索47位亲友
      </view>
    </navigator>
  </view>
  <!-- 明星生日  -->
  <view class="item section">
    <view class="section_star" wx:if="{{isShowStar}}">
      <view class="wrap">
        <view class="section_title section_star_title">
          <view class="section_star_star">明星生日 12.05</view>
          <view class="section_star_close" bindtap="handleHideStar">收起</view>
        </view>
      </view>
      <view class="section_star_scroll">
        <scroll-view class="scroll-view_H" scroll-x="true" bindscroll="scroll">
          <view id="demo1" class="scroll-view-item_H">
            <view class="star">
              <view class="left">
                <view class="info">
                  <view class="name">阿信</view>
                  <view class="job">男歌手</view>
                </view>
                <button size="mini" plain='true' class="bless">点赞送祝福</button>
              </view>
              <view class="right">
                <image src="../../images/star1.jpg" mode="aspectFill"></image>
              </view>
            </view>
          </view>
          <view id="demo2" class="scroll-view-item_H">
            <view class="star">
              <view class="left">
                <view class="info">
                  <view class="name">唐嫣</view>
                  <view class="job">女演员</view>
                </view>
                <button size="mini" plain='true' class="bless">点赞送祝福</button>
              </view>
              <view class="right">
                <image src="../../images/star2.jpg" mode="aspectFill"></image>
              </view>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
    <!--历史上的今天  -->
    <view class="section_history wrap">
      <view class="section_title section_history_title">历史上的今天</view>
